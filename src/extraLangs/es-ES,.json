  "fileDescription": "Cadenas para skymen_smartjoystick.",
  "text": {
    "plugins": {
      "skymen_smartjoystick": {
        "name": "Joystick Inteligente",
        "description": "Un plugin de joystick inteligente",
        "help-url": "https://www.construct.net",
        "aceCategories": {
          "general": "general"
        },
        "properties": {
          "texture": {
            "name": "Textura",
            "desc": "Haz clic para editar la textura del objeto.",
            "link-text": "Editar"
          },
          "size": {
            "name": "Tamaño",
            "desc": "Haz clic para ajustar el objeto al mismo tamaño que su imagen.",
            "link-text": "Hacer 1:1"
          },
          "touch_event": {
            "name": "Evento de toque",
            "desc": "Qué hacer al iniciar y finalizar el toque",
            "items": {
              "none": "Ninguno",
              "fade": "Desvanecer",
              "reset": "Restablecer posición"
            }
          },
          "initial_state": {
            "name": "Estado inicial",
            "desc": "Si es Desvanecer, decide si el joystick comienza visible o no.",
            "items": {
              "visible": "Visible",
              "invisible": "Invisible"
            }
          },
          "mode": {
            "name": "Modo",
            "desc": "Ninguno se comporta como un joystick normal. Inteligente sigue el mando si se aleja demasiado. Generar crea el joystick si se pulsa en cualquier parte dentro del radio y luego se comporta como un joystick normal.",
            "items": {
              "none": "Ninguno",
              "smart": "Inteligente",
              "spawn": "Generar"
            }
          },
          "radius": {
            "name": "Radio",
            "desc": "Solo si es inteligente o generar. Decide el radio en el que el joystick se activa de todas formas."
          },
          "use_mouse_input": {
            "name": "Usar entrada de ratón",
            "desc": "Si se debe usar la entrada del ratón o solo la entrada táctil",
            "items": {
              "yes": "Sí",
              "no": "No"
            }
          },
          "fade_time": {
            "name": "Tiempo de desvanecimiento",
            "desc": "Solo si el evento de toque está en desvanecer. El tiempo está en milisegundos."
          }
        },
        "actions": {
          "BindHandle": {
            "list-name": "Vincular mando",
            "display-text": "Vincular {0} al mando del joystick",
            "description": "Vincular mando",
            "params": {
              "handle": {
                "name": "Mando",
                "desc": "El mando a vincular."
              }
            }
          },
          "SetEvent": {
            "list-name": "Establecer evento de toque",
            "display-text": "Establecer evento de toque a {0}",
            "description": "Establecer evento de toque",
            "params": {
              "event": {
                "name": "Evento",
                "desc": "El evento a establecer",
                "items": {
                  "none": "Ninguno",
                  "fade": "Desvanecer",
                  "spawn": "Generar"
                }
              }
            }
          },
          "SetMode": {
            "list-name": "Establecer modo",
            "display-text": "Establecer modo a {0}",
            "description": "Establecer modo",
            "params": {
              "mode": {
                "name": "Modo",
                "desc": "El modo a establecer",
                "items": {
                  "none": "Ninguno",
                  "smart": "Inteligente",
                  "spawn": "Generar"
                }
              }
            }
          },
          "SetRadius": {
            "list-name": "Establecer radio",
            "display-text": "Establecer radio a {0}",
            "description": "Establecer radio",
            "params": {
              "radius": {
                "name": "Radio",
                "desc": "El radio a establecer"
              }
            }
          }
        },
        "conditions": {
          "IsDragging": {
            "list-name": "Está arrastrando",
            "display-text": "Está arrastrando",
            "description": "Verdadero cuando se usa el joystick",
            "params": {}
          },
          "OnDragStart": {
            "list-name": "Al iniciar arrastre",
            "display-text": "Al iniciar arrastre",
            "description": "Se activa cuando se empieza a usar el joystick",
            "params": {}
          },
          "OnDragStop": {
            "list-name": "Al finalizar arrastre",
            "display-text": "Al finalizar arrastre",
            "description": "Se activa cuando se deja de usar el joystick",
            "params": {}
          }
        },
        "expressions": {
          "JoystickAngle": {
            "translated-name": "ÁnguloJoystick",
