            "params": {}
          },
          "JoystickForce": {
            "translated-name": "FuerzaJoystick",
            "description": "Devuelve la fuerza del joystick",
            "params": {}
          },
          "JoystickForceX": {
            "translated-name": "FuerzaJoystickX",
            "description": "Devuelve la fuerza X del joystick",
            "params": {}
          },
          "JoystickForceY": {
            "translated-name": "FuerzaJoystickY",
            "description": "Devuelve la fuerza Y del joystick",
            "params": {}
          },
          "JoystickRadius": {
            "translated-name": "RadioJoystick",
            "description": "Devuelve el radio del joystick",
            "params": {}
          },
          "JoystickX": {
            "translated-name": "JoystickX",
            "description": "Devuelve la posición X del joystick",
            "params": {}
          },
          "JoystickY": {
